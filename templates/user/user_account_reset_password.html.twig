{% extends 'base.html.twig' %}

{% block title %}
    Reset your password
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <div class="form-container sign-in-container">
        {{ form_start(resetForm) }}
        <h1>Modifier le mot de passe</h1>
        {{ form_widget(resetForm.plainPassword.first, { 'attr': { 'placeholder': "Nouveau mot de passe"} }) }}
        {{ form_widget(resetForm.plainPassword.second, { 'attr': { 'placeholder': "Saisissez une seconde fois le nouveau mot de passe"} }) }}
        <button type="submit">Enregistrer les modifications</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}

